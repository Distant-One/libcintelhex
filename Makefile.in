SRCS=$(wildcard src/*.c)
OBJS=$(SRCS:src/%.c=obj/%.o)

CCFLAGS ?= -O3 -fPIC -Wall -Iinclude/
LDFLAGS ?= -shared -fPIC

EXECUTABLE = libcintelhex.so

prefix = @prefix@
exec_prefix = @exec_prefix@

all: prepare release

obj/%.o: src/%.c
	$(CC) $(CCFLAGS) -o $@ -c $<

clean:
	rm -rf obj bin

release: $(OBJS)
	$(CC) $(LDFLAGS) -o bin/$(EXECUTABLE) $(OBJS)

prepare:
	@MKDIR_P@ bin
	@MKDIR_P@ obj

install: all
	@INSTALL@ -C bin/*.so -t @libdir@/
	@INSTALL@ -C include/*.h -t @includedir@/

test: all
	$(MAKE) -C tests
	cd tests
	tests/test
